{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "jsx": "react",
        "allowJs": true,
        "typeRoots": [ "./types", "./node_modules/@types" ],
    },
    "exclude": [
        "./node_modules/**/*", "types"
    ]
}
